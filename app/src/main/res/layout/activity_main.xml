<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    tools:context=".MainActivity">

    <!-- Contenedor principal en vertical -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="8dp"
        android:paddingStart="@dimen/padding_main"
        android:paddingEnd="@dimen/padding_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HEADER: Logo y tÃ­tulo -->
        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/header_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/flower_pot"
                android:contentDescription="@string/logo_alt_txt"
                android:layout_marginEnd="16dp" />

            <!-- Nombre del vivero -->
            <TextView
                android:id="@+id/nombre_vivero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_vivero"
                android:textColor="@color/emerald_800"
                android:textStyle="bold"
                android:textSize="32sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>